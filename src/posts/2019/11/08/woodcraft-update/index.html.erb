  data[:post][:title] = "Woodcraft Update"
  data[:post][:date] = Time.parse("2019-11-08T21:00:00Z")
  data[:post][:summary] = "Hello there, I'd like to announce that the YATM Woodcraft module has been updated!"

  render_node = proc do |name|
    component("nodes/Show", minimal: true, **data[:nodes_basename_state][name])
  end

