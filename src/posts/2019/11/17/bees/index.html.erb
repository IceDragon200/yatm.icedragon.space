<%
  data[:post][:title] = "YATM Bees Update!"
  data[:post][:date] = Time.parse("2019-11-17T16:15:00Z")
  data[:post][:summary] = "Bee hives and comb textures!"
  data[:post][:icon] = "wooden-sign"

  render_node = proc do |name|
    component("nodes/Show", minimal: true, **data[:nodes_basename_state][name])
