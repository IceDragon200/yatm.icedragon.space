';	 data[:posts].each do |post| 
 _buf << '		<div class="box ba bw1 flex flex-column">
			<div class="header">
				<div class="heading bg0 fg1 ph3 pv2">
					<h5>'; _buf << ( post[:date].strftime("%Y/%m/%d @ %H:%m %Z") ).to_s; _buf << '</h5>
